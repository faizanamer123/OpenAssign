{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server/database/sqlite.js",
    "server/controllers/userController.js",
    "server/controllers/submissionController.js",
    "server/controllers/otpController.js",
    "server/controllers/notificationController.js",
    "server/controllers/leaderboardController.js",
    "server/controllers/assignmentController.js",
    "server/controllers/analyticsController.js",
    "server/routes/user.js",
    "server/routes/submission.js",
    "server/routes/otp.js",
    "server/routes/notification.js",
    "server/routes/leaderboard.js",
    "server/routes/assignment.js",
    "server/routes/analytics.js"
  ],
  "exclude": ["node_modules"]
}
